generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id
  name            String
  email           String
  emailVerified   Boolean
  image           String?
  createdAt       DateTime
  updatedAt       DateTime
  username        String
  displayUsername String
  sessions        Session[]
  accounts        Account[]

  position       String
  university     String
  specialization String
  motivation     String

  role       String?
  banned     Boolean?
  banReason  String?
  banExpires DateTime?

  // Relations:
  newsArticles       NewsArticle[] // One-to-many
  resourcesArticles  ResourcesArticle[] // One-to-many
  greentouchSessions GreentouchSessionUserData[] // One-to-many

  @@unique([email])
  @@unique([username])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model NewsArticle {
  id        String   @id @default(cuid())
  authorId  String
  title     String
  content   String
  image     String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade) // if user is deleted, their articles are deleted too

  @@map("news_article")
}

model ResourcesArticle {
  id        String   @id @default(cuid())
  authorId  String
  topic     String
  title     String
  content   String
  image     String?
  link      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade) // if user is deleted, their articles are deleted too

  @@map("resources_article")
}

model GreentouchSession {
  id          String   @id @default(cuid())
  name        String   @unique
  releaseDate DateTime

  // Relations
  users GreentouchSessionUserData[]

  @@map("greentouch_session")
}

model GreentouchSessionUserData {
  greentouchSessionId          String
  userId                       String
  natureConnectedness          Int?
  natureConnectednessCreatedAt DateTime @default(now())
  diaryEntry                   String[] @default([])

  // Relations
  greentouchSession GreentouchSession @relation(fields: [greentouchSessionId], references: [id], onDelete: Cascade)
  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([greentouchSessionId, userId])
  @@unique([greentouchSessionId, userId])
  @@map("greentouch_session_user_data")
}


